<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sayem - Blogs</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9fafb;
        margin: 0;
        padding: 0;
        color: #1f2937;
      }
      nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: #ddd;
        color: #000;
        padding: 20px;
        position: sticky;
        top: 0;
        left: 0;
      }
      nav ul {
        display: flex;
        list-style-type: none;
        gap: 30px;
        align-items: center;
      }
      nav ul li a {
        color: #000;
        text-decoration: none;
        font-size: 17px;
        font-weight: 400;
      }
      nav > div {
        font-size: 20px;
      }
      nav button {
        width: 100px;
        height: 40px;
        background: rgb(0, 179, 255);
        border: none;
        font-weight: 500;
        font-size: 12px;
      }
      * {
        padding: 0;
        margin: 0;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        scroll-behavior: smooth;
      }
      body,
      html {
        width: 100%;
        height: 100%;
        background: #ffffff;
      }
      .blogs-page {
        padding: 60px 20px;
        text-align: center;
      }
      .container {
        max-width: 1100px;
        margin: 0 auto;
      }
      .page-title {
        font-size: 3rem;
        margin-bottom: 40px;
        color: #111827;
      }
      .blogs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
      }
      .blog-card {
        background-color: white;
        border-radius: 16px;
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.07);
        overflow: hidden;
        transition: transform 0.3s ease;
        text-align: left;
      }
      .blog-card:hover {
        transform: translateY(-10px);
      }
      .blog-card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
      }
      .blog-card h3 {
        font-size: 1.4rem;
        margin: 16px;
        color: #1e40af;
      }
      .blog-card p {
        margin: 0 16px 16px;
        color: #4b5563;
        font-size: 1rem;
      }
      .blog-card .date {
        margin: 0 16px 20px;
        font-size: 0.9rem;
        color: #6b7280;
      }
    </style>
  </head>
  <body>
    <nav>
      <div>DesignWithSayem</div>
      <ul>
        <li><a href="/">Home</a></li>
        <a href="/admin/login"><button>Login By Admin</button></a>
      </ul>
    </nav>

    <section class="blogs-page">
      <div class="container">
        <% if (posts.length > 0) { %>
        <h1 class="page-title">My Blog Posts</h1>
        <div class="blogs-grid">
          <% posts.forEach(post => { %>
          <div class="blog-card">
            <img src="/<%= post.image %>" alt="<%= post.title %>" />
            <h3><%= post.title %></h3>
            <p><%= post.description %></p>
            <p class="date">
              <strong>Date:</strong> <%= post.date.toLocaleString() %>
            </p>
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <h1>No Blog Found!</h1>
        <% } %>
      </div>
    </section>
  </body>
</html>
